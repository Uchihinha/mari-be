files: 
  /etc/cron.d/certbot_renew: 
    content: "@weekly root certbot renew\n"
    group: root
    mode: "000644"
    owner: root
    
commands:
  01-update:
    command: sudo dnf update -y

container_commands:
  10_installcertbot: 
    command: "sudo dnf install -y certbot"
    
  20_getcert: 
    command: "sudo certbot certonly --debug --non-interactive --email ${EMAIL_LINK} --agree-tos --standalone --domains api.dominandomilhas.com.br --keep-until-expiring --pre-hook 'sudo /bin/systemctl stop nginx.service' --post-hook 'sudo /bin/systemctl start nginx.service'"
    
  30_link: 
    command: "ln -sf /etc/letsencrypt/live/${DOMAIN_LINK} /etc/letsencrypt/live/ebcert"
